# Environment Configuration for DMHCA HRMS
# Copy this file to .env.local in the frontend directory

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Admin Operations (Optional - for creating employee accounts)
# WARNING: This should only be used in development or secure backend environments
# In production, user creation should be handled by backend API
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Configuration
VITE_APP_NAME=DMHCA HRMS
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Backend API Configuration (if using separate backend)
VITE_API_BASE_URL=http://localhost:3001
VITE_WEBHOOK_URL=http://localhost:3001/webhook/onlinerealsoft

# Security Configuration
VITE_SESSION_TIMEOUT=3600
VITE_ENABLE_ADMIN_FEATURES=true

# Feature Flags
VITE_ENABLE_EMPLOYEE_REGISTRATION=false
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_EMAIL_VERIFICATION=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_SHOW_MOCK_DATA=false
